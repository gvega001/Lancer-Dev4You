
@model Lancer.Models.FreeLancerViewModel
@{
    ViewData["Title"] = "Freelancer";
    Layout = "_Layout";
}

<div class="top-container">
    <div class="fluid-container">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Create Freelancer</h1>
                <p class="lead">Pro Freelancer</p>

            </div>
        </div>
    </div>

</div>
<form method="post" class="form-horizontal">
    <div class="form-group" asp-validation-summary="All">
        <label asp-for="FirstName" class="col-md-2 control-label">First Name</label>
        <div class="col-md-10">
            <input asp-for="FirstName" class="form-control" />
        </div>
        <label asp-for="LastName" class="col-md-2 control-label">Last Name</label>
        <div class="col-md-10">
            <input asp-for="LastName" class="form-control" />
        </div>
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
        </div>
        <label asp-for="Phone" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Phone" asp-area="3" class="form-control" />
        </div>
        <label asp-for="Address" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Address" asp-area="3" class="form-control" />
        </div>
        <label asp-for="State" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="State" asp-area="3" class="form-control" />
        </div>
        <label asp-for="City" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="City" asp-area="3" class="form-control" />
        </div>
        <label asp-for="ZipCode" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ZipCode" asp-area="3" class="form-control" />
        </div>
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn btn-primary">Create</button>
        </div>
    </div>
</form>
<hr>