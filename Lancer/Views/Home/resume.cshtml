@{
    ViewData["Title"] = "Resume";
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<section id="title">
    <div class="top-container-resume">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100"
                         src="images/carousel1.PNG"
                         alt="My masters project Azure Portal screen shot"
                         srcset="images/carousel1-480.PNG 480w,
                   images/carousel1-960.PNG 960w,
                   images/carousel1-1440.PNG 1440w,
                   images/carousel1.PNG 1920w"
                         sizes="(max-width:480px) 240px,
                  (max-width:960px) 480px,
                  (max-width:1440px) 960px,
                   1920px">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                         src="images/carousel2.PNG"
                         alt="My masters project code screen shot"
                         srcset="images/carousel2-480.PNG 480w,
                   images/carousel2-960.PNG 960w,
                   images/carousel2-1440.PNG 1440w,
                   images/carousel2.PNG 1920w"
                         sizes="(max-width:480px) 240px,
                  (max-width:960px) 480px,
                  (max-width:1440px) 960px,
                   1920px">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                         src="images/carousel3.png"
                         alt="My masters project code screen shot"
                         srcset="images/carousel3-480.png 480w,
                   images/carousel3-960.png 960w,
                   images/carousel3-1440.png 1440w,
                   images/carousel3.png 1920w"
                         sizes="(max-width:480px) 240px,
                  (max-width:960px) 480px,
                  (max-width:1440px) 960px,
                   1920px">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</section>
<section id="body">

    <div class="container-fluid">
        <div class="card-columns">
            <div class="card">
                <img src="images/lego-robotics.jpg" class="card-img-top" alt="LEGO EV3.Image by shotbyhens from Pixabay.">
                <div class="card-body">
                    <h5 class="card-title">STEM & Math Teacher</h5>
                    <p class="card-text">
                        I have been a <em>K-12</em> public educator for <em>over</em> a decade. I offer personal
                        <strong>virtual tutoring.</strong>
                    </p>
                </div>
            </div>
            <div class="card p-3">
                <img src="images/computer-programmer.jpg" class="card-img-top" alt="Computer programmer. Image by 200 Degrees from Pixabay.">
                <blockquote class="blockquote mb-1 card-body">
                    <p></p>
                    <footer class="blockquote-footer">
                        <small class="text-muted">
                            I offer <em>Salesforce development</em> and <i>Salesforce administration</i>. <br><strong>APEX Programming Language<br></strong><cite title="Source Title">Salesforce Developer</cite>
                        </small>
                    </footer>
                </blockquote>
            </div>
            <div class="card ">
                <img src="images/programmer-shadow.png" class="card-img-top" alt="Computer Programmer Desk. Image by Free-Photos from Pixabay ">
                <div class="card-body">
                    <h5 class="card-title">C# & Java Developer</h5>
                    <p class="card-text">
                        I have <em>both</em> professional experience & academic knowledge of <strong>many</strong> computer programming
                        languages. The <i>two</i> programming languages that I feel most confident with are <em>Java and C#</em>. I have academic experience using the .NET
                        framework & and professional experience using Spring Boot.
                    </p>
                    <p class="card-text"><small class="text-muted">.NET & Spring Boot</small></p>
                </div>
            </div>
            <div class="card bg-light text-black text-center p-3">
                <img src="images/programmer.png" class="card-img-top" alt="Computer Programmer Desk. Image by Free-Photos from Pixabay ">
                <blockquote class="blockquote mb-0">
                    <p>
                        I have <strong>a lot</strong>  of Web Development <code>(HTML, CSS, and JavaScript)</code> experience. I have experience in <em>Microsoft Azure.</em>
                    </p>
                    <footer class="blockquote-footer text-white">
                        <small>
                            Confident in all front end development<cite title="Source Title">Front End Developer</cite>
                        </small>
                    </footer>
                </blockquote>
            </div>
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Back-End Developer</h5>
                    <p class="card-text">
                        I have a <strong>ton</strong> of experience with database <em>creation, integration, and management.</em> On top of knowing
                        SQL, I have a <em>deep</em> knowledge <i>server-side</i> programming languages as well.
                    </p>
                    <p class="card-text">
                        <small class="text-muted">Postgres, Docker, MySQL, Azure SQL, to more.</small>
                    </p>
                </div>
            </div>
            <div class="card">
                <img src="images/database.jpg" class="card-img-top" alt="...">
            </div>


        </div>
    </div>

</section>

