@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model Lancer.Models.OfferViewModel

@{
    ViewData["Title"] = "Offer";
    Layout = "_Layout";
}
<fieldset class="Offer">

    <div class="top-container">
        <div class="fluid-container">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Offer</h1>
                    <p class="lead">Contact Offer</p>
                </div>
            </div>
        </div>

    </div>


    <form asp-action="Offer" asp-controller="Home">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Bids" class="control-label"></label>
            <input asp-for="Bids" class="form-control" />
            <span asp-validation-for="Bids" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Business" class="control-label"></label>
            <input asp-for="Business" class="form-control" />
            <span asp-validation-for="Business" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lead" class="control-label"></label>
            <input asp-for="Lead" class="form-control" />
            <span asp-validation-for="Lead" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FreeLancers" class="control-label"></label>
            <input asp-for="FreeLancers" class="form-control" />
            <span asp-validation-for="FreeLancers" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Project" class="control-label"></label>
            <input asp-for="Project" class="form-control" />
            <span asp-validation-for="Project" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</fieldset>